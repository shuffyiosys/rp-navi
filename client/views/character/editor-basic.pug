doctype html
html 
	head
		title Profile editor
		link(rel="stylesheet", href="/css/common.css")
		link(rel="stylesheet", href="/css/editor-basic.css")

		script(src="/js/tinymce/tinymce.min.js" referrerpolicy="origin")
		script(src="/js/utilities.js" referrerpolicy="origin") 
		script(src="/js/editor.js" referrerpolicy="origin")
	body 
		div.header
			h2 Editing character: #{data.name}
		div.editor-container
			div.mce-container
				textarea#editor
			div.card.bottom
				div
					a(href="/character/editor-advanced?character=" + data.name) Advanced editor
				div(style="text-align: right;")
					button#submit-editor-btn.btn.btn-primary Submit

