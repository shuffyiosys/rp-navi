doctype html
html 
	head
		title="Index"
		script(src="./js/index_test.js" defer)
		link(rel="stylesheet", href="./css/index.css")
	body 
		div.content
			a(href="chat", target="_blank", rel="noopener noreferrer") Chat link
			div.formStyle
				label Email: 
					input#emailInput(type="text")
				br
				label Password: 
					input#passwordInput(type="password")
				br
				br
				button#signupSubmit Sign up
				button#loginSubmit Login
				button#forgotPassword Forgot Password
				br
				br
				label Reset password:
					input#resetPasswordInput(type="password")
				br
				label Reset token:
					input#resetTokenInput(type="text")
					button#resetPasswordBtn Reset Password

			div.formStyle
				p Account Actions
				button#logOutBtn Logout 
				button#getData Get account data
				button#getVerification Resend Verification
				br
				br
				label Change Email: 
				input#newEmailInput(type="email")
				button#updateEmail Update
				br
				br
				label Change Password:
				input#newPasswordInput(type="password")
				button#updatepasswordBtn Update
				br
				br
				button#deleteAccountBtn Delete
			div.formStyle
				p Character Actions
				button#getCharactersBtn Get characters
				br
				br
				label Create character: 
				input#newCharacterInput(type="text")
				button#newCharacter Create
				br
				br
				div#characterList
					div.flex-container
		div.formStyle
			p Messages
			ul#statusMessage